# Copy to .env and fill with your Twilio credentials
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
# Must be a WhatsApp-enabled Twilio number, prefixed with whatsapp:
TWILIO_WHATSAPP_FROM=whatsapp:+17343367101

# === Docker-Friendly Additions ===

# Gateway authentication token (generate with: openssl rand -hex 32)
OPENCLAW_GATEWAY_TOKEN=your-gateway-token-here

# Claude API credentials (pick one method)
# Option A: Anthropic API key
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Option B: Claude web session (alternative to API key)
# CLAUDE_AI_SESSION_KEY=
# CLAUDE_WEB_SESSION_KEY=
# CLAUDE_WEB_COOKIE=

# Paths (adjust for your system)
OPENCLAW_CONFIG_DIR=./openclaw-home
OPENCLAW_WORKSPACE_DIR=./openclaw-workspace

# Optional
OPENCLAW_GATEWAY_PORT=18789
OPENCLAW_BRIDGE_PORT=18790
OPENCLAW_GATEWAY_BIND=lan

# Command Router Plugin (optional)
# OPENCLAW_CLI_PATH=node /app/openclaw.mjs
# Agent definitions: "command:agent_id:description:timeout_sec" (comma-separated)
# COMMAND_ROUTER_AGENTS=GE:ge:Gemini agent:120,eng:engineer:Engineer agent:300
# PERSONA_SCRIPT_PATH=
