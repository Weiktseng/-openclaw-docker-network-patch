FROM openclaw:local

USER root

# Install Python + pip
RUN apt-get update \
    && apt-get install -y --no-install-recommends python3 python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Install required Python packages for tools
COPY openclaw-python-requirements.txt /tmp/openclaw-python-requirements.txt
RUN python3 -m pip install --no-cache-dir --break-system-packages -r /tmp/openclaw-python-requirements.txt

USER node
